<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.P0341_SQLite" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyStyle">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">serif-monospace</item>
    </style>

    <style name="TableHead">
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12sp</item>
        <item name="android:background">@drawable/back_for_head</item>
    </style>

    <style name="TableData">
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12sp</item>
        <item name="android:background">@drawable/back</item>
    </style>
</resources>